{
  "name": "adr-tracker",
  "version": "0.1.0",
  "description": "CLI tool to track and validate Architecture Decision Records (ADRs) in projects",
  "main": "dist/index.js",
  "bin": {
    "adr-tracker": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:ui": "vite build",
    "start": "ts-node src/cli.ts",
    "dev": "ts-node src/cli.ts",
    "dev:ui": "vite --config vite.config.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "adr",
    "architecture",
    "decision",
    "records",
    "cli",
    "validation"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.15.21",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-interface-checker": "^1.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^5.1.0",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^14.0.0",
    "glob": "^11.0.2",
    "markdown-it": "^14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1"
  }
}
